                    <span asp-validation-for="Subject" class="text-muted"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Message" class="col-2 col-form-label">Message</label>
                <div class="col-md-4 col-sm-5">
                    <textarea asp-for="Message" type="text" class="form-control"></textarea>
                    <span asp-validation-for="Message" class="text-muted"></span>

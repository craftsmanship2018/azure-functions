<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="X-UA-Compatible" content="IE=edge" charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Craftathon</title>

    <link href="~/lib/bootstrap-4.1.3-dist/css/bootstrap.css" rel="stylesheet" />
    <link href="~/lib/fontawesome-free-5.3.1-web/css/all.css" rel="stylesheet" />
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-purple fixed-top">
        <span class="navbar-brand mb-0 h1">Craftathon</span>

        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="navbar-nav" class="collapse navbar-collapse">
            <ul class="navbar-nav">
                <li class="nav-item">
                    <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/demo">Demo</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/about">Computershare</a>
                </li>
            </ul>
        </div>
    </nav>

    <div class="container">
        @RenderBody()
    </div>

    @RenderSection("scripts", false)
    <script src="~/lib/jquery-3.3.1.js"></script>
    <script src="~/lib/bootstrap-4.1.3-dist/js/bootstrap.js"></script>

    <script>
        $(document).ready(function () {
            SetNavBarActiveState();
        });

        function SetNavBarActiveState() {
            var current = location.pathname;
            var anchors = $('#navbar-nav li a');

            for (var i = 0; i < anchors.length; i++) {
                var $anchor = $(anchors[i]);
                var href = $anchor.attr('href');

                // if the current path is like this link, make it active
                if (href.indexOf(current) !== -1) {
                    $anchor.addClass('active');
                    return;
                }
            }
        }
    </script>
</body>
</html>